{
  "manifest_version": 3,
  "name": "LeetCode Weekly Tracker",
  "version": "1.0",
  "description": "Track your daily LeetCode problems with a weekly goal of 50 problems",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetCode Tracker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.leetcode.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/leetcode_icon_16x16.png",
    "48": "icons/leetcode_icon_48x48.png",
    "128": "icons/leetcode_icon_128x128.png"
  }
} 